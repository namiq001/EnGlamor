@model EditSettingVM
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Value"></label>
        <input asp-for="Value" class="form-control form-control-user"
               placeholder="Value">
        <span asp-validation-for="Value"></span>
    </div>
    <div class="text-center"><button type="submit" class="btn btn-info" style="margin-top: 30px;">Edit Setting</button></div>
</form>