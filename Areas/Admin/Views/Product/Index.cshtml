@model List<GetProductVM>
@{
    int count = 0;
}
<!-- Bootstrap Dark Table -->
<div class="card">
    <div class="row">
        <div class="col-6">
            <h5 class="card-header">Product Table</h5>
        </div>
        <div class="col-6">
            <a asp-action="Create"><button class="btn btn-info" style="margin-top: 16px;">Create Product</button></a>
        </div>
    </div>


    <div class="table-responsive text-nowrap">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Brand name</th>
                    <th>Catagory name</th>
                    <th>Image</th>
                    <th>Setting</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@(++count)</strong></td>
                        <td>@item.ProductName</td>
                        <td>$@item.ProductPrice</td>
                        <td>@item.BrandName</td>
                        <td>@item.CatagoryName</td>
                        <td>
                            <img id="product-image" src="~/assets/img/products/@item.ProductImageUrl" style="width: 100px" alt="">
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <form class="dropdown-item" asp-action="Detail" asp-route-id="@item.ProductId"><i class="bx bx-edit-alt me-1"></i><button style="border: none; outline: none; background: none;">Detail</button></form>
                                    <form class="dropdown-item" asp-action="Edit" asp-route-id="@item.ProductId" method="get"><i class="bx bx-edit-alt me-1"></i> <button style="border: none; outline: none; background: none;">Edit</button></form>
                                    <form class="dropdown-item" asp-action="Delete" asp-route-id="@item.ProductId" method="post"><i class="bx bx-edit-alt me-1"></i> <button style="border: none; outline: none; background: none;">Delete</button></form>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!--/ Bootstrap Dark Table -->